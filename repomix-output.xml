    id,
    isStreaming = false,
    messages = [],
    scrollRef,
    currentPhase,
    reasoningText,
    thinkingDuration,
    fileOperations,
    tokenUsage,
  } = props;

  return (
    <div
      id={id}
      ref={(node) => {
        if (ref) {
          if (typeof ref === 'function') {
            ref(node);
