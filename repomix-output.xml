                    }
                    return paths;
                  };

                  const allPaths = flattenFiles(treeData.files);
                  logger.debug(`📁 File tree contains: ${allPaths.join(', ')}`);

                  const hasBrandAsset = allPaths.some((p) => p.includes('public/assets/') && p.endsWith('.png'));
