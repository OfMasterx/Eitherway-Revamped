  private symbolToCoingeckoId(symbol: string): string {
    const mapping: Record<string, string> = {
      'ETH': 'ethereum',
      'BTC': 'bitcoin',
      'USDC': 'usd-coin',
      'USDT': 'tether',
      'MATIC': 'matic-network'
    };
    return mapping[symbol.toUpperCase()] || symbol.toLowerCase();
  }

