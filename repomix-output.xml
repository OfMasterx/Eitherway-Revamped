}

function confirmDelete(button) {
  setButtonLoading(button, true, 'Deleting...');

  setTimeout(() => {
    closeModal(button.closest('.modal-overlay').id);
    showToast('Item deleted successfully', 'success');
  }, 800);
}

function handleEditAction(button) {
  showModal({
    title: 'Edit Item',
    content: `
