      element.closest('.sidebar, nav, .navigation, .menu, .nav-menu, aside') ||
      element.closest('[class*="sidebar"], [class*="navigation"], [class*="nav-"]')
    ) {
      // For navigation context, assume the button text is a section name
      element.onclick = (e) => {
