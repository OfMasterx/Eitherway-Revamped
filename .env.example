# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (for image generation)
OPENAI_API_KEY=your_openai_api_key_here

# CoinGecko API Keys (for crypto price data)
# Demo API: https://www.coingecko.com/en/api/pricing
COINGECKO_DEMO_API_KEY=
# Pro API (optional): https://www.coingecko.com/en/api/pricing
COINGECKO_PRO_API_KEY=

# PostgreSQL Configuration
# For production: Use strong password and change default user
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=eitherway
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_MAX_CONNECTIONS=20

# Server Configuration
PORT=3001
WORKSPACE_DIR=./workspace

# Environment
# For production: Set to 'production'
NODE_ENV=production

# Encryption Key for Netlify PATs (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_encryption_key_here

# Netlify Server Token (optional, for live deployment logs)
# Generate at: https://app.netlify.com/user/applications#personal-access-tokens
NETLIFY_SERVER_TOKEN=
